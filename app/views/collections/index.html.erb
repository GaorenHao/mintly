<div class="container">
  <div class="search-bar">
    <%= form_with url: collections_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        placeholder: "Find a collection",
        class: "search"
      %>
      <%= submit_tag "Search", class: "search-button" %>
    <% end %>
  </div>
  <% @collections.each do |collection|  %>
    <%= link_to collection_path(collection) do %>
    <div class="linkbox">
      <div class="collection-image" style="background-image: url('<%= collection.image %>');">
      </div>
      <div class="collection-details">
        <div class="info">
            <h2><%= collection.name %></h2>
          <div class="info-detail">
            <div class="short-desc">
              <p>Items</p>
            </div>
          </div>
        </div>
      </div>
      <div class="price">
        <i class="fa-brands fa-ethereum"></i><p>
          <% unless collection.histories.last.nil? %>
            <%= collection.histories.last.price.round(2) %>
          <% else %>
            NIL
          <% end %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
