<div class="gradient-top">
</div>
<div class="container">
  <div class="logo" style="background-image: url(<%= image_path 'mintly.png' %>);">
  </div>
  <div class="m-card">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: { turbo: false }) do |f| %>
      <div class="white-text">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "grid margin-bottom-1" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "grid margin-bottom-1" } %>
      </div>

      <div class="flex-center margin-bottom-1">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="gradient-bottom">
</div>
