<div class="gradient-top">
</div>
<div class="container">
  <div class="logo" style="background-image: url(<%= image_path 'mintly.png' %>);">
  </div>
  <div class="m-card">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>

    <div class="white-text">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "grid margin-bottom-1" }%>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "grid margin-bottom-1" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "grid margin-bottom-1" } %>
    </div>

    <div class="flex-center margin-bottom-1">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
</div>
<div class="gradient-bottom">
</div>
